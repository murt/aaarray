{
    "testMatch": ["<rootDir>/test/*.test.ts"],
    "transform": {
        "^.+\\.ts$": "ts-jest"
    },
    "testPathIgnorePatterns": ["/node_modules/"],
    "moduleFileExtensions": ["ts", "js"],
    "collectCoverage": true,
    "collectCoverageFrom": ["<rootDir>/src/**/*.ts"],
    "coverageReporters": ["text", "lcovonly"],
    "verbose": true
}
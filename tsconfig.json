{
    "files": ["src/index.ts", "src/types.ts", "src/utils.ts", "src/decorators.ts"],
    "compilerOptions": {
        "module": "CommonJS",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strict": true,
        "preserveConstEnums": true,
        "inlineSources": true,
        "sourceMap": true,
        "outDir": "dist",
        "target": "es5",
        "lib": ["esnext"],
        "declaration": true,
        "declarationDir": "dist",
        "declarationMap": true
    }
}
